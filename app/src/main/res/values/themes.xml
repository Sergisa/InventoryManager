<resources>
    <!-- Base application theme. -->
    <style name="Theme.InventoryManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.InventoryManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="fab_icon" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:radius">1dp</item>
        <item name="cornerRadius">1dp</item>
        <item name="strokeColor">@color/teal_700</item>
    </style>

    <style name="mainButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">15sp</item>
        <item name="strokeColor">@color/purple_200</item>
    </style>


    <style name="dialogInputBoxHintStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="dialogInputBoxStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/blue_gray_200</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="placeholderTextColor">@color/blue_gray_200</item>
        <item name="boxStrokeColor">@color/outline_box_color</item>
        <item name="hintTextAppearance">@style/dialogInputBoxHintStyle</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="dialogInputStyle">
        <item name="android:padding">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="dialogMultilineInputStyle" parent="dialogInputStyle">
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">5</item>
    </style>

    <style name="dialogFormLabelStyle">
        <item name="android:layout_marginEnd">@dimen/form_label_spacing_horizontal</item>
        <item name="fontFamily">@font/raleway</item>
    </style>

    <style name="dialogSecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:strokeColor">@color/gray_200</item>
        <item name="strokeColor">@color/gray_500</item>
        <item name="android:textColor">@color/blue_gray_500</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialogButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="maxWidth">0dp</item>
        <item name="maxHeight">0dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="itemButtonStyle" parent="mainButtonStyle">
        <item name="android:height">38dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">1dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="borderWidth">2dp</item>
    </style>

    <style name="Theme.InventoryManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.InventoryManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InventoryManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="android:Theme.Black">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:width">24dp</item>
        <item name="android:height">24dp</item>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
</resources>